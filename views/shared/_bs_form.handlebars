<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Record your blood sugar</h3>
    </div>
    <div class="panel-body">
        <form action="/records/bloodsugar" method="post">
            <input type="hidden" name="user-id" value="{{currentUser.id}}">
            <div class="form-group row">
                <label for="blood-sugar" class="col-2 col-form-label">Number</label>
                <div class="col-10">
                    <input class="form-control" type="number" id="blood-sugar" name="blood-sugar">
                </div>
            </div>
            <div class="form-group row">
                <label for="time-of-reading" class="col-2 col-form-label">Time</label>
                <div class="col-10">
                    <input class="form-control" type="datetime-local" value="{{currentTime}}" id="time-of-reading" name="time-of-reading">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
